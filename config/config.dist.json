{
	"mqtt": {
		"uri": "mqtt://localhost"
	},
	"influxdb": {
		"host": "localhost",
		"database": "home"
	},
	"homekit": {
		"persistPath": "/path/where/to/store/homekit/data"
	},
	"devices": {
		"living-room-thermostat": {
			"type": "thermostat",
			"config": {
				"type": "apple-homekit",
				"name": "Living Room Thermostat",
				"temperatureSensor": {
					"type": "mqtt",
					"topic": "living_room.temperature",
					"format": {
						"format": "json",
						"path": ""
					},
					"persistance": {
						"type": "influxdb",
						"measurement": "temperature",
						"tags": {
							"room": "living-room"
						}
					}
				},
				"heater": {
					"type": "on-off",
					"config": {
						"type": "tplink-smart-plug",
						"ip": "192.168.1.10"
					}
				}
			}
		},
		"bedroom-thermostat": {
			"type": "thermostat",
			"config": {
				"type": "apple-homekit",
				"name": "Bedroom Thermostat",
				"temperatureSensor": {
					"type": "mqtt",
					"topic": "bedroom.temperature",
					"format": {
						"format": "json",
						"path": ""
					},
					"persistance": {
						"type": "influxdb",
						"measurement": "temperature",
						"tags": {
							"room": "bedroom"
						}
					}
				},
				"heater": {
					"type": "on-off",
					"config": {
						"type": "tplink-smart-plug",
						"ip": "192.168.1.11"
					}
				}
			}
		}
	}
}